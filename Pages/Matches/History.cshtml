@page
@model PCM_396.Pages.Matches.HistoryModel
@{
    ViewData["Title"] = "Lịch sử trận đấu";
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <h1 class="display-6 mb-2">
                    <i class="bi bi-clock-history text-info"></i>
                    Lịch sử trận đấu
                </h1>
                <p class="text-muted mb-0">
                    <i class="bi bi-list-check"></i>
                    Xem lại tất cả các trận đấu đã diễn ra
                </p>
            </div>
        </div>
    </div>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model.Matches.Count == 0)
{
    <div class="card border-0 shadow-sm text-center p-5">
        <div class="card-body">
            <i class="bi bi-inbox display-1 text-muted mb-3"></i>
            <h5>Chưa có trận đấu nào được ghi nhận</h5>
            <p class="text-muted">Các trận đấu sẽ được trọng tài ghi nhận sau khi kết thúc</p>
        </div>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var match in Model.Matches)
        {
            <div class="col-12">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                @if (match.Format == (int)PCM_396.Models.MatchFormat.Singles)
                                {
                                    <span class="badge bg-primary me-2">
                                        <i class="bi bi-person"></i> Đơn (Singles)
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-info me-2">
                                        <i class="bi bi-people"></i> Đôi (Doubles)
                                    </span>
                                }
                                
                                @if (match.IsRanked)
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-star-fill"></i> Tính điểm
                                    </span>
                                }
                                
                                @if (match.Challenge != null)
                                {
                                    <span class="badge bg-danger">
                                        <i class="bi bi-trophy"></i> Challenge Match
                                    </span>
                                }
                            </div>
                            <small class="text-muted">
                                <i class="bi bi-calendar3"></i>
                                @match.MatchDate.ToString("dd/MM/yyyy HH:mm")
                            </small>
                        </div>
                    </div>
                    
                    <div class="card-body">
                        @if (match.Format == (int)PCM_396.Models.MatchFormat.Singles)
                        {
                            <!-- Singles -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="p-3 bg-success bg-opacity-10 rounded mb-3">
                                        <h6 class="text-success mb-3">
                                            <i class="bi bi-trophy-fill"></i> Người thắng
                                        </h6>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-person-circle display-6 text-success me-3"></i>
                                            <div>
                                                <div class="fw-bold fs-5">@match.Winner1.FullName</div>
                                                <span class="badge bg-success">
                                                    <i class="bi bi-star-fill"></i> Rank: @match.Winner1.RankLevel.ToString("F1")
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="p-3 bg-danger bg-opacity-10 rounded mb-3">
                                        <h6 class="text-danger mb-3">
                                            <i class="bi bi-x-circle-fill"></i> Người thua
                                        </h6>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-person-circle display-6 text-danger me-3"></i>
                                            <div>
                                                <div class="fw-bold fs-5">@match.Loser1.FullName</div>
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-star-fill"></i> Rank: @match.Loser1.RankLevel.ToString("F1")
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <!-- Doubles -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="p-3 bg-success bg-opacity-10 rounded mb-3">
                                        <h6 class="text-success mb-3">
                                            <i class="bi bi-trophy-fill"></i> Đội thắng (Winners)
                                        </h6>
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="bi bi-person-circle fs-4 text-success me-2"></i>
                                            <div>
                                                <div class="fw-bold">@match.Winner1.FullName</div>
                                                <span class="badge bg-success">
                                                    <i class="bi bi-star-fill"></i> @match.Winner1.RankLevel.ToString("F1")
                                                </span>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-person-circle fs-4 text-success me-2"></i>
                                            <div>
                                                <div class="fw-bold">@match.Winner2?.FullName</div>
                                                <span class="badge bg-success">
                                                    <i class="bi bi-star-fill"></i> @match.Winner2?.RankLevel.ToString("F1")
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="p-3 bg-danger bg-opacity-10 rounded mb-3">
                                        <h6 class="text-danger mb-3">
                                            <i class="bi bi-x-circle-fill"></i> Đội thua (Losers)
                                        </h6>
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="bi bi-person-circle fs-4 text-danger me-2"></i>
                                            <div>
                                                <div class="fw-bold">@match.Loser1.FullName</div>
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-star-fill"></i> @match.Loser1.RankLevel.ToString("F1")
                                                </span>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-person-circle fs-4 text-danger me-2"></i>
                                            <div>
                                                <div class="fw-bold">@match.Loser2?.FullName</div>
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-star-fill"></i> @match.Loser2?.RankLevel.ToString("F1")
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        
                        @if (match.Challenge != null)
                        {
                            <div class="alert alert-danger border-0 mb-0 mt-3">
                                <i class="bi bi-trophy-fill me-2"></i>
                                <strong>Từ kèo:</strong> @match.Challenge.Title
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
