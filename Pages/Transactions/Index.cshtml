@page
@model PCM_396.Pages.Transactions.IndexModel
@{
    ViewData["Title"] = "Quản lý Tài chính";
}

<div class="finance-page">
    <!-- Page Header -->
    <div class="finance-header mb-4">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <div class="d-flex align-items-center gap-3">
                    <div class="header-icon">
                        <i class="bi bi-wallet2"></i>
                    </div>
                    <div>
                        <h1 class="finance-title mb-1">Quản lý Tài chính</h1>
                        <p class="finance-subtitle mb-0">Theo dõi thu chi quỹ CLB minh bạch</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
                <a asp-page="Create" class="btn btn-add-transaction">
                    <i class="bi bi-plus-circle-fill me-2"></i>
                    Thêm giao dịch
                </a>
            </div>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-lg-4 col-md-6">
            <div class="stats-card stats-income">
                <div class="stats-card-inner">
                    <div class="stats-icon-wrapper">
                        <div class="stats-icon">
                            <i class="bi bi-arrow-up-circle-fill"></i>
                        </div>
                    </div>
                    <div class="stats-content">
                        <div class="stats-label">Tổng thu</div>
                        <div class="stats-value text-success">+@Model.TotalIncome.ToString("N0") ₫</div>
                        <div class="stats-badge">
                            <i class="bi bi-graph-up"></i>
                            Khoản thu
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="stats-card stats-expense">
                <div class="stats-card-inner">
                    <div class="stats-icon-wrapper">
                        <div class="stats-icon">
                            <i class="bi bi-arrow-down-circle-fill"></i>
                        </div>
                    </div>
                    <div class="stats-content">
                        <div class="stats-label">Tổng chi</div>
                        <div class="stats-value text-danger">-@Model.TotalExpense.ToString("N0") ₫</div>
                        <div class="stats-badge">
                            <i class="bi bi-graph-down"></i>
                            Khoản chi
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-12">
            <div class="stats-card stats-balance">
                <div class="stats-card-inner">
                    <div class="stats-icon-wrapper">
                        <div class="stats-icon">
                            <i class="bi bi-wallet2"></i>
                        </div>
                    </div>
                    <div class="stats-content">
                        <div class="stats-label">Số dư quỹ</div>
                        <div class="stats-value text-primary">@Model.Balance.ToString("N0") ₫</div>
                        <div class="stats-badge">
                            <i class="bi bi-cash-stack"></i>
                            Tổng quỹ
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="filter-card mb-4">
        <div class="filter-header">
            <i class="bi bi-funnel-fill"></i>
            <span>Bộ lọc</span>
        </div>
        <div class="filter-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-lg-5 col-md-6">
                    <label class="filter-label">
                        <i class="bi bi-arrow-left-right"></i>
                        Loại giao dịch
                    </label>
                    <select name="FilterType" class="filter-select" onchange="this.form.submit()">
                        <option value="">Tất cả</option>
                        <option value="Thu" selected="@(Model.FilterType == "Thu")">Thu</option>
                        <option value="Chi" selected="@(Model.FilterType == "Chi")">Chi</option>
                    </select>
                </div>
                <div class="col-lg-5 col-md-6">
                    <label class="filter-label">
                        <i class="bi bi-tag-fill"></i>
                        Danh mục
                    </label>
                    <select name="FilterCategory" class="filter-select" onchange="this.form.submit()">
                        <option value="">Tất cả danh mục</option>
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category" selected="@(Model.FilterCategory == category)">@category</option>
                        }
                    </select>
                </div>
                <div class="col-lg-2 col-md-12">
                    <a asp-page="Index" class="btn-reset-filter w-100">
                        <i class="bi bi-x-circle-fill"></i>
                        Xóa lọc
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Transactions Table -->
    <div class="transactions-card">
        <div class="transactions-header">
            <div class="d-flex align-items-center gap-2">
                <i class="bi bi-receipt"></i>
                <h5 class="mb-0">Danh sách giao dịch</h5>
            </div>
            <div class="transactions-count">
                @Model.Transactions.Count giao dịch
            </div>
        </div>
        <div class="transactions-body">
            @if (Model.Transactions.Count == 0)
            {
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="bi bi-inbox"></i>
                    </div>
                    <h5 class="empty-title">Chưa có giao dịch nào</h5>
                    <p class="empty-text">Thêm giao dịch mới để bắt đầu theo dõi tài chính CLB</p>
                    <a asp-page="Create" class="btn btn-primary mt-3">
                        <i class="bi bi-plus-circle me-1"></i>
                        Tạo giao dịch đầu tiên
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="transactions-table">
                        <thead>
                            <tr>
                                <th style="width: 120px;">
                                    <i class="bi bi-calendar3 me-1"></i>Ngày
                                </th>
                                <th style="width: 100px;">
                                    <i class="bi bi-arrow-left-right me-1"></i>Loại
                                </th>
                                <th style="width: 150px;">
                                    <i class="bi bi-tag me-1"></i>Danh mục
                                </th>
                                <th>
                                    <i class="bi bi-chat-left-text me-1"></i>Mô tả
                                </th>
                                <th class="text-end" style="width: 150px;">
                                    <i class="bi bi-cash-stack me-1"></i>Số tiền
                                </th>
                                <th style="width: 150px;">
                                    <i class="bi bi-person me-1"></i>Người tạo
                                </th>
                                <th class="text-center" style="width: 120px;">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in Model.Transactions)
                            {
                                <tr class="transaction-row">
                                    <td>
                                        <div class="transaction-date">
                                            <i class="bi bi-calendar-check"></i>
                                            @transaction.TransactionDate.ToString("dd/MM/yyyy")
                                        </div>
                                    </td>
                                    <td>
                                        @if (transaction.Type == "Thu")
                                        {
                                            <span class="type-badge type-income">
                                                <i class="bi bi-arrow-up-circle-fill"></i>
                                                Thu
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="type-badge type-expense">
                                                <i class="bi bi-arrow-down-circle-fill"></i>
                                                Chi
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <span class="category-badge">
                                            <i class="bi bi-bookmark-fill"></i>
                                            @transaction.Category
                                        </span>
                                    </td>
                                    <td>
                                        <div class="transaction-description">
                                            @if (!string.IsNullOrEmpty(transaction.Description))
                                            {
                                                @transaction.Description
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Không có mô tả</span>
                                            }
                                        </div>
                                    </td>
                                    <td class="text-end">
                                        @if (transaction.Type == "Thu")
                                        {
                                            <div class="amount-income">
                                                +@transaction.Amount.ToString("N0") ₫
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="amount-expense">
                                                -@transaction.Amount.ToString("N0") ₫
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <div class="creator-info">
                                            <i class="bi bi-person-circle"></i>
                                            @transaction.Creator.FullName
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <div class="action-buttons">
                                            <a asp-page="Edit" asp-route-id="@transaction.Id" 
                                               class="action-btn action-edit" title="Sửa">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <form method="post" asp-page-handler="Delete" asp-route-id="@transaction.Id" 
                                                  onsubmit="return confirm('Bạn có chắc muốn xóa giao dịch này?');" 
                                                  class="d-inline">
                                                <button type="submit" class="action-btn action-delete" title="Xóa">
                                                    <i class="bi bi-trash3-fill"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .finance-page {
        padding: 2rem 1rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .header-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 28px;
        box-shadow: 0 8px 16px rgba(102, 126, 234, 0.3);
    }

    .finance-title {
        font-size: 2rem;
        font-weight: 800;
        color: #1f2937;
    }

    .finance-subtitle {
        color: #6b7280;
        font-size: 0.95rem;
    }

    .btn-add-transaction {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 12px;
        font-weight: 600;
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        transition: all 0.3s ease;
    }

    .btn-add-transaction:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
        color: white;
    }

    .stats-card {
        background: white;
        border-radius: 20px;
        padding: 1.75rem;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        border: 2px solid transparent;
        height: 100%;
    }

    .stats-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 28px rgba(0, 0, 0, 0.12);
    }

    .stats-income:hover { border-color: #10b981; }
    .stats-expense:hover { border-color: #ef4444; }
    .stats-balance:hover { border-color: #3b82f6; }

    .stats-card-inner {
        display: flex;
        align-items: center;
        gap: 1.25rem;
    }

    .stats-icon {
        width: 70px;
        height: 70px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 32px;
    }

    .stats-income .stats-icon {
        background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
        color: #059669;
    }

    .stats-expense .stats-icon {
        background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
        color: #dc2626;
    }

    .stats-balance .stats-icon {
        background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
        color: #2563eb;
    }

    .stats-label {
        font-size: 0.875rem;
        color: #6b7280;
        font-weight: 600;
        text-transform: uppercase;
    }

    .stats-value {
        font-size: 1.75rem;
        font-weight: 800;
        line-height: 1;
    }

    .stats-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        padding: 0.25rem 0.75rem;
        background: #f3f4f6;
        border-radius: 20px;
        font-size: 0.75rem;
        color: #6b7280;
        font-weight: 600;
    }

    .filter-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    .filter-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1rem 1.5rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .filter-body {
        padding: 1.5rem;
    }

    .filter-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
        color: #374151;
        margin-bottom: 0.5rem;
        font-size: 0.875rem;
    }

    .filter-select {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 2px solid #e5e7eb;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

    .filter-select:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
    }

    .btn-reset-filter {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.75rem 1rem;
        background: #f3f4f6;
        border: 2px solid #e5e7eb;
        border-radius: 10px;
        color: #6b7280;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn-reset-filter:hover {
        background: #ef4444;
        border-color: #ef4444;
        color: white;
    }

    .transactions-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    .transactions-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1.25rem 1.5rem;
        background: #f9fafb;
        border-bottom: 2px solid #e5e7eb;
    }

    .transactions-count {
        background: #667eea;
        color: white;
        padding: 0.375rem 1rem;
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: 600;
    }

    .transactions-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

    .transactions-table thead th {
        padding: 1rem 1.25rem;
        text-align: left;
        font-weight: 700;
        font-size: 0.875rem;
        color: #6b7280;
        border-bottom: 2px solid #e5e7eb;
        text-transform: uppercase;
    }

    .transaction-row:hover {
        background: #f9fafb;
    }

    .transaction-row td {
        padding: 1.25rem;
        border-bottom: 1px solid #f3f4f6;
    }

    .transaction-date {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #6b7280;
        font-size: 0.875rem;
        font-weight: 600;
    }

    .type-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 700;
        font-size: 0.875rem;
    }

    .type-income {
        background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
        color: #059669;
    }

    .type-expense {
        background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
        color: #dc2626;
    }

    .category-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        padding: 0.5rem 1rem;
        background: #f3f4f6;
        border-radius: 20px;
        color: #4b5563;
        font-weight: 600;
        font-size: 0.875rem;
    }

    .amount-income {
        color: #059669;
        font-weight: 800;
        font-size: 1.1rem;
    }

    .amount-expense {
        color: #dc2626;
        font-weight: 800;
        font-size: 1.1rem;
    }

    .creator-info {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #6b7280;
        font-size: 0.875rem;
        font-weight: 600;
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
    }

    .action-btn {
        width: 36px;
        height: 36px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .action-edit {
        background: #dbeafe;
        color: #2563eb;
        text-decoration: none;
    }

    .action-edit:hover {
        background: #2563eb;
        color: white;
        transform: scale(1.1);
    }

    .action-delete {
        background: #fee2e2;
        color: #dc2626;
    }

    .action-delete:hover {
        background: #dc2626;
        color: white;
        transform: scale(1.1);
    }

    .empty-state {
        padding: 4rem 2rem;
        text-align: center;
    }

    .empty-icon {
        width: 120px;
        height: 120px;
        margin: 0 auto 1.5rem;
        background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 4rem;
        color: #9ca3af;
    }

    .empty-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #374151;
    }

    .empty-text {
        color: #6b7280;
    }

    @@media (max-width: 991px) {
        .finance-title { font-size: 1.5rem; }
        .stats-value { font-size: 1.5rem; }
    }

    @@media (max-width: 767px) {
        .stats-icon { width: 50px; height: 50px; font-size: 24px; }
        .stats-value { font-size: 1.25rem; }
    }
</style>
