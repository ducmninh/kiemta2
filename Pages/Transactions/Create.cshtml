@page
@model PCM_396.Pages.Transactions.CreateModel
@{
    ViewData["Title"] = "Thêm Giao dịch";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="mb-4">
                <a asp-page="Index" class="btn btn-outline-secondary mb-3">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
                <h2 class="mb-2">
                    <i class="bi bi-plus-circle text-primary"></i>
                    Thêm Giao dịch mới
                </h2>
                <p class="text-muted">Nhập thông tin giao dịch thu chi</p>
            </div>

            <!-- Form Card -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form method="post">
                        <div class="row g-3">
                            <!-- Transaction Date -->
                            <div class="col-md-6">
                                <label asp-for="Transaction.TransactionDate" class="form-label fw-semibold">
                                    <i class="bi bi-calendar3"></i> Ngày giao dịch
                                </label>
                                <input asp-for="Transaction.TransactionDate" 
                                       type="datetime-local" 
                                       class="form-control" />
                                <span asp-validation-for="Transaction.TransactionDate" class="text-danger small"></span>
                            </div>

                            <!-- Type -->
                            <div class="col-md-6">
                                <label asp-for="Transaction.Type" class="form-label fw-semibold">
                                    <i class="bi bi-arrow-left-right"></i> Loại giao dịch
                                </label>
                                <select asp-for="Transaction.Type" class="form-select">
                                    <option value="">-- Chọn loại --</option>
                                    <option value="Thu">Thu</option>
                                    <option value="Chi">Chi</option>
                                </select>
                                <span asp-validation-for="Transaction.Type" class="text-danger small"></span>
                            </div>

                            <!-- Category -->
                            <div class="col-md-6">
                                <label asp-for="Transaction.Category" class="form-label fw-semibold">
                                    <i class="bi bi-tag"></i> Danh mục
                                </label>
                                <select asp-for="Transaction.Category" class="form-select">
                                    <option value="">-- Chọn danh mục --</option>
                                    @foreach (var category in Model.Categories)
                                    {
                                        <option value="@category">@category</option>
                                    }
                                </select>
                                <span asp-validation-for="Transaction.Category" class="text-danger small"></span>
                            </div>

                            <!-- Amount -->
                            <div class="col-md-6">
                                <label asp-for="Transaction.Amount" class="form-label fw-semibold">
                                    <i class="bi bi-cash-stack"></i> Số tiền (₫)
                                </label>
                                <input asp-for="Transaction.Amount" 
                                       type="number" 
                                       class="form-control" 
                                       placeholder="Nhập số tiền..." 
                                       min="0" 
                                       step="1000" />
                                <span asp-validation-for="Transaction.Amount" class="text-danger small"></span>
                            </div>

                            <!-- Description -->
                            <div class="col-12">
                                <label asp-for="Transaction.Description" class="form-label fw-semibold">
                                    <i class="bi bi-chat-left-text"></i> Mô tả
                                </label>
                                <textarea asp-for="Transaction.Description" 
                                          class="form-control" 
                                          rows="3" 
                                          placeholder="Nhập mô tả chi tiết..."></textarea>
                                <span asp-validation-for="Transaction.Description" class="text-danger small"></span>
                            </div>

                            <!-- Submit Buttons -->
                            <div class="col-12 mt-4">
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-primary flex-fill">
                                        <i class="bi bi-check-circle"></i> Tạo giao dịch
                                    </button>
                                    <a asp-page="Index" class="btn btn-outline-secondary">
                                        <i class="bi bi-x-circle"></i> Hủy
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
