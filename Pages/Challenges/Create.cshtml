@page
@model PCM_396.Pages.Challenges.CreateModel
@{
    ViewData["Title"] = "Tạo Kèo mới";
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col-12">
        <div class="text-center">
            <h1 class="display-6 mb-2">
                <i class="bi bi-plus-circle-fill text-primary"></i>
                Tạo Kèo thách đấu mới
            </h1>
            <p class="text-muted">
                <i class="bi bi-lightbulb"></i>
                Đăng thách thức của bạn và chờ đối thủ xứng tầm!
            </p>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-0 shadow-lg">
            <div class="card-header bg-primary text-white py-4">
                <h4 class="mb-0">
                    <i class="bi bi-pencil-square me-2"></i>
                    Thông tin Kèo đấu
                </h4>
            </div>
            <div class="card-body p-4">
                <form method="post">
                    <div class="mb-4">
                        <label asp-for="Input.Title" class="form-label fw-bold">
                            <i class="bi bi-tag-fill text-primary me-2"></i>
                            Tiêu đề kèo *
                        </label>
                        <input asp-for="Input.Title" class="form-control form-control-lg" 
                               placeholder="VD: Tối chấp nửa trái, ai dám nhận không?" />
                        <span asp-validation-for="Input.Title" class="text-danger"></span>
                        <div class="form-text">
                            <i class="bi bi-info-circle"></i>
                            Đặt tiêu đề hấp dẫn để thu hút đối thủ
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Input.Description" class="form-label fw-bold">
                            <i class="bi bi-card-text text-info me-2"></i>
                            Mô tả chi tiết (tùy chọn)
                        </label>
                        <textarea asp-for="Input.Description" class="form-control" rows="5" 
                                  placeholder="Mô tả thêm về kèo đấu: thời gian, địa điểm, điều kiện, phần thưởng..."></textarea>
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                    </div>
                    
                    <div class="alert alert-info border-0">
                        <i class="bi bi-lightbulb-fill me-2"></i>
                        <strong>Lưu ý:</strong> Kèo sẽ ở trạng thái "Đang mở" cho đến khi có người nhận. Sau đó bạn có thể đấu và trọng tài sẽ ghi nhận kết quả.
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="d-grid gap-3 d-md-flex justify-content-md-end">
                        <a asp-page="Index" class="btn btn-secondary btn-lg px-4">
                            <i class="bi bi-x-circle me-2"></i>
                            Hủy bỏ
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg px-5">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            Tạo Kèo ngay
                        </button>
                    </div>
                </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
